<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
 xmlns:gap   = "http://phonegap.com/ns/1.0"
 id          = "com.reifax.test"
 versionCode = "10" 
 version     = "1.0.0" >
 
	<name>Reifax Mobile</name>

	<description>
		An example for phonegap build docs. 
	</description> 

	<author href="http://test.reifax.com" email="jesusemarquezz@gmail.com">
		Jesus Marquez
	</author>
 
	<content src="index.html" />

	<preference name="orientation" value="landscape" />
	
	<icon src="includes/images/icon.png" />
    <icon src="includes/images/logo-reifax-mobile36.png"   gap:platform="android"    gap:density="ldpi" />
    <icon src="includes/images/logo-reifax-mobile48.png"   gap:platform="android"    gap:density="mdpi" />
    <icon src="includes/images/logo-reifax-mobile72.png"   gap:platform="android"    gap:density="hdpi" />
    <icon src="includes/images/logo-reifax-mobile96.png"   gap:platform="android"    gap:density="xhdpi" />

	<gap:plugin name="com.boyvanderlaak.cordova.plugin.orientationchanger" version="0.1.1" />
	<gap:plugin name="org.apache.cordova.device" />
	<gap:plugin name="org.apache.cordova.InAppBrowser" />
	
	<access origin="*" subdomains="true" />

</widget>